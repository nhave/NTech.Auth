@page "/"

<PageTitle>Home</PageTitle>

<Card>
    <CardHeader>
        <h1>Hello, world!</h1>
    </CardHeader>
    <CardBody>
        <AuthorizeView>
            <Authorized>
                @foreach (var claim in context.User.Claims)
                {
                    <p>@claim.Type: @claim.Value</p>
                }
            </Authorized>
            <NotAuthorized>
                <h3>Please log in to see this content.</h3>
            </NotAuthorized>
        </AuthorizeView>
    </CardBody>
    <CardFooter></CardFooter>
</Card>
